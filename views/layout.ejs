<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meetio - <%- pageName %> </title>
  <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700;900&family=Staatliches&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="/css/app.css">
</head>

<body>
  <header class="site-header contenedor">
    <a href="/">
      <img src="/img/logo.png" alt="Logo Meetio">
    </a>

    <nav class="nav">
      <a href="#">Create Group</a>
      <a href="/signin">Login</a>
      <a href="/signup">Signup</a>
    </nav>
  </header>

  <% if (locals.messages) { %>
    <% const category = Object.keys(locals.messages) %>
    <% if (category.length) { %>
      <% locals.messages[category].forEach(alert => { %>
        <div class="alertas">
          <p class="alerta <%= category %>"><%= alert %></p> 
        </div>
      <% }); %> 
    <% } %>  
  <% } %> 

  <%- body %>

  <footer class="site-footer contenedor">
    <nav class="nav">
      <a href="#">Create Group</a>
      <a href="/signin">Login</a>
      <a href="/signup">Signup</a>
    </nav>
    <p class="copyright">Todos los derechos reservados Meetio <%- year %> &copy</p>
  </footer>

</body>

</html>